@model Application.Products.Dtos.ViewModels.CreateProductViewModel
@{
	ViewData["Title"] = "Add";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить продукт</h2>

<form asp-controller="Products" asp-action="Add" asp-area="Admin" method="post" enctype="multipart/form-data">

	<div class="row ">
		<div class="col-md-6">
			<div class="row ">
				<div class="form-group col-md-5">
					<label asp-for="@Model.Product.Articul"></label>
					<input asp-for="@Model.Product.Articul" class="form-control" />
					<span asp-validation-for="@Model.Product.Articul" class="text-danger"></span>
				</div>
			</div>

			<div class="row ">
				<div class="form-group col-md-5">
					<label asp-for="@Model.Product.Name"></label>
					<input asp-for="@Model.Product.Name" class="form-control" />
					<span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
				</div>
			</div>

			<div class="row ">
				<div class="form-group col-md-5">
					<label asp-for="@Model.Product.WholesalePrice"></label>
					<input asp-for="@Model.Product.WholesalePrice" class="form-control" />
					<span asp-validation-for="@Model.Product.WholesalePrice" class="text-danger"></span>
				</div>
			</div>

			<div class="row ">
				<div class="form-group col-md-5">
					<label asp-for="@Model.Product.RetailPrice"></label>
					<input asp-for="@Model.Product.RetailPrice" class="form-control" />
					<span asp-validation-for="@Model.Product.RetailPrice" class="text-danger"></span>
				</div>
			</div>

			<div class="row ">
				<div class="form-group col-md-5">
					<label asp-for="@Model.Product.Width"></label>
					<input asp-for="@Model.Product.Width" class="form-control" />
					<span asp-validation-for="@Model.Product.Width" class="text-danger"></span>
				</div>
			</div>

			<div class="row ">
				<div class="form-group col-md-5">
					<label asp-for="@Model.Product.Height"></label>
					<input asp-for="@Model.Product.Height" class="form-control" />
					<span asp-validation-for="@Model.Product.Height" class="text-danger"></span>
				</div>
			</div>

			<div class="row ">
				<div class="form-group col-md-5">
					<label asp-for="@Model.Product.Depth"></label>
					<input asp-for="@Model.Product.Depth" class="form-control" />
					<span asp-validation-for="@Model.Product.Depth" class="text-danger"></span>
				</div>
			</div>

			<div class="row ">
				<div class="form-group col-md-5">
					<label asp-for="@Model.Product.Color"></label>
					<input asp-for="@Model.Product.Color" class="form-control" />
					<span asp-validation-for="@Model.Product.Color" class="text-danger"></span>
				</div>
			</div>

			<div class="row ">
				<div class="form-group col-md-5">
					<label asp-for="@Model.Product.Status"></label>
					<input asp-for="@Model.Product.Status" class="form-control" />
					<span asp-validation-for="@Model.Product.Status" class="text-danger"></span>
				</div>
			</div>

			<div class="row ">
				<div class="form-group col-md-5">
					<label asp-for="@Model.Product.Count"></label>
					<input asp-for="@Model.Product.Count" class="form-control" />
					<span asp-validation-for="@Model.Product.Count" class="text-danger"></span>
				</div>
			</div>

			<div class="row ">
				<div class="form-group col-md-5">
					<label asp-for="@Model.Product.Category"></label>
					<select asp-for="@Model.Product.Category.Id" class="form-control">
						@foreach (var category in Model.Categories)
						{
							<option value="@category.Id">@category.Name</option>
						}
					</select>
					<span asp-validation-for="@Model.Product.Category" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div col-md-6>
			<input type="file" asp-for="@Model.Product.Images" multiple>
		</div>
	</div>
	<button type="submit">Создать</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}