@using Host.Extensions
@model Application.Products.Dtos.ProductDto

@{
	ViewBag.Title = "title";
}

<h2>@Model.Name</h2>
<h3>@Model.Articul</h3>

<div class="row">
	<div class="col-md-5">
		<partial name="/Views/Products/_Carousel.cshtml" model="@Model" />
	</div>

	<div class="col-md-7">
		<p>@Model.GetProductDimensions()</p>

		<h4>@Model.RetailPriceInRubles&#8381;</h4>

		<div class="row">
			<div class="col-md-6">
				<div class="input-group">
					<input class="form-control" type="number" value="1" />
					<span class="input-group-btn">
						<button class="btn btn-primary to-cart" data-product-id="@Model.Id">В корзину</button>
					</span>
				</div>
			</div>
		</div>
	</div>
</div>